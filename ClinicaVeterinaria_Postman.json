{
  "info": {
    "name": "Clínica Veterinaria API",
    "description": "Colección de pruebas para la API REST de la Clínica Veterinaria (Spring Boot 3 + JWT).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Autenticación",
      "item": [
        {
          "name": "Registro de Usuario",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"veterinario@clinica.com\",\n  \"password\": \"123456\",\n  \"rol\": \"VETERINARIO\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "auth",
                "register"
              ]
            }
          }
        },
        {
          "name": "Inicio de Sesión (Login)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set(\"jwt_token\", jsonData.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"veterinario@clinica.com\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "auth",
                "login"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "2. Mascotas",
      "item": [
        {
          "name": "Crear Mascota",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Bobby\",\n  \"especie\": \"Perro\",\n  \"raza\": \"Golden Retriever\",\n  \"fechaNacimiento\": \"2020-05-10\",\n  \"peso\": 20.5,\n  \"clienteId\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/mascotas",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "mascotas"
              ]
            }
          }
        },
        {
          "name": "Listar Mascotas (Paginado)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/mascotas?page=0&size=10",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "mascotas"
              ],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                }
              ]
            }
          }
        },
        {
          "name": "Subir Imagen Mascota",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/mascotas/1/imagen",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "mascotas",
                "1",
                "imagen"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "3. Clientes",
      "item": [
        {
          "name": "Crear Cliente",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"nombre\": \"Juan\",\n  \"apellidos\": \"Pérez\",\n  \"dni\": \"12345678A\",\n  \"telefono\": \"600123456\",\n  \"email\": \"juan@cliente.com\",\n  \"direccion\": \"Calle Falsa 123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/clientes",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "clientes"
              ]
            }
          }
        }
      ]
    },
    {
      "name": "4. Citas Veterinarias",
      "item": [
        {
          "name": "Agendar Cita",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fechaHora\": \"2026-06-15T10:30:00\",\n  \"motivo\": \"Revisión anual y vacunas\",\n  \"estado\": \"PENDIENTE\",\n  \"mascotaId\": 1,\n  \"veterinarioId\": 1\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/citas",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "api",
                "citas"
              ]
            }
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          ""
        ]
      }
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ]
}
